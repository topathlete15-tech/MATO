<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h2 class="mb-0">タスク詳細</h2>
          <span class="badge bg-<%= @task.status == 'completed' ? 'success' : @task.status == 'in_progress' ? 'warning' : 'secondary' %> fs-6">
            <%= case @task.status
                when 'pending'
                  '未着手'
                when 'in_progress'
                  '進行中'
                when 'completed'
                  '完了'
                end %>
          </span>
        </div>
        <div class="card-body">
          <h3 class="card-title mb-3"><%= @task.title %></h3>
          
          <div class="mb-4">
            <h5 class="fw-bold">説明</h5>
            <p class="text-muted"><%= @task.description.present? ? simple_format(@task.description) : "説明なし" %></p>
          </div>

          <div class="mb-4">
            <h5 class="fw-bold">作成日時</h5>
            <p class="text-muted"><%= @task.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
          </div>

          <% if @task.updated_at != @task.created_at %>
            <div class="mb-4">
              <h5 class="fw-bold">更新日時</h5>
              <p class="text-muted"><%= @task.updated_at.strftime("%Y年%m月%d日 %H:%M") %></p>
            </div>
          <% end %>
        </div>
        <div class="card-footer bg-transparent">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <% if current_user %>
                <% if current_user.favorites.exists?(task: @task) %>
                  <%= button_to "いいね解除（#{@task.favorites.count}）", task_favorite_path(@task), method: :delete, class: "btn btn-outline-danger btn-sm" %>
                <% else %>
                  <%= button_to "いいね（#{@task.favorites.count}）", task_favorite_path(@task), method: :post, class: "btn btn-outline-primary btn-sm" %>
                <% end %>
              <% else %>
                <span class="text-muted">いいねするにはログインしてください（<%= @task.favorites.count %>件）</span>
              <% end %>
            </div>
            <div>
              <%= link_to "一覧に戻る", tasks_path, class: "btn btn-secondary me-2" %>
              <%= link_to "編集", edit_task_path(@task), class: "btn btn-primary me-2" %>
              <%= link_to "削除", task_path(@task), method: :delete, 
                  data: { confirm: "本当に削除しますか？" }, 
                  class: "btn btn-danger" %>
            </div>
          </div>

          <hr>

          <div class="mt-3">
            <h4 class="mb-3">コメント</h4>

            <% if current_user %>
              <%= form_with model: [@task, @comment], local: true do |f| %>
                <div class="mb-3">
                  <%= f.text_area :body, rows: 3, class: "form-control", placeholder: "コメントを入力してください" %>
                </div>
                <div class="d-flex justify-content-end mb-3">
                  <%= f.submit "コメントを投稿", class: "btn btn-primary" %>
                </div>
              <% end %>
            <% else %>
              <p class="text-muted">コメントするにはログインしてください。</p>
            <% end %>

            <div class="list-group mt-3">
              <% if @comments.any? %>
                <% @comments.each do |comment| %>
                  <div class="list-group-item">
                    <div class="d-flex justify-content-between">
                      <div>
                        <strong><%= comment.user.name %></strong>
                        <small class="text-muted ms-2"><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></small>
                      </div>
                      <% if current_user == comment.user %>
                        <%= link_to "削除", task_comment_path(@task, comment), method: :delete, data: { confirm: "コメントを削除しますか？" }, class: "btn btn-sm btn-outline-danger" %>
                      <% end %>
                    </div>
                    <p class="mt-2 mb-0"><%= simple_format(comment.body) %></p>
                  </div>
                <% end %>
              <% else %>
                <p class="text-muted">まだコメントはありません。</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
