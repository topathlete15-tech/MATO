<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-warning text-dark">
          <h2 class="mb-0">タスク編集</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @task, url: task_path(@task), local: true do |f| %>
            <% if @task.errors.any? %>
              <div class="alert alert-danger">
                <h5>以下のエラーがあります：</h5>
                <ul class="mb-0">
                  <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :title, "タイトル", class: "form-label fw-bold" %>
              <%= f.text_field :title, class: "form-control", placeholder: "タスクのタイトルを入力してください" %>
            </div>

            <div class="mb-3">
              <%= f.label :description, "説明", class: "form-label fw-bold" %>
              <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "タスクの詳細を入力してください" %>
            </div>

            <div class="mb-3">
              <%= f.label :status, "ステータス", class: "form-label fw-bold" %>
              <%= f.select :status, Task.statuses.keys.map { |k|
                [case k
                 when 'pending'
                   '未着手'
                 when 'in_progress'
                   '進行中'
                 when 'completed'
                   '完了'
                 end, k]
                }, {}, { class: "form-select"} %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to "キャンセル", task_path(@task), class: "btn btn-secondary" %>
              <%= f.submit "タスクを更新", class: "btn btn-warning" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
