<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">新規タスク作成</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @task, url: tasks_path, local: true do |f| %>
            <% if @task.errors.any? %>
              <div class="alert alert-danger">
                <h5>以下のエラーがあります：</h5>
                <ul class="mb-0">
                  <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :title, "タイトル", class: "form-label fw-bold" %>
              <%= f.text_field :title, class: "form-control", placeholder: "タスクのタイトルを入力してください" %>
            </div>

            <div class="mb-3">
              <%= f.label :description, "説明", class: "form-label fw-bold" %>
              <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "タスクの詳細を入力してください" %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to "キャンセル", tasks_path, class: "btn btn-secondary" %>
              <%= f.submit "タスクを作成", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
